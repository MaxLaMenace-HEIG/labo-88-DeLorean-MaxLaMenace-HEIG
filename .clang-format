---

BasedOnStyle: LLVM
BreakBeforeBraces: Custom
BraceWrapping:
  AfterClass:      true
  AfterEnum:       true
  AfterFunction:   true
  AfterNamespace:  true
  AfterStruct:     true
  AfterUnion:      true
  BeforeCatch:     true
  BeforeElse:      true
  IndentBraces:    false
  AfterControlStatement: true
  AfterObjCDeclaration:  true

UseTab: Always
IndentWidth: 4
TabWidth: 4
PointerAlignment: Left
IndentCaseLabels: false
#BreakArrays:      false
Language: Cpp     # Works also for C
...
